actor Grarg replaces DoomImp
{
	Health 100
	Radius 16
	Height 56
	Speed 5
	PainChance 240
	Mass 100
	Scale 0.7
	Monster
	Dropitem "Ammo357",64
	SeeSound "Grarg/Sight"
	DeathSound "Grarg/Death"
	ActiveSound "Grarg/Barks"
	PainSound "Grarg/Pain"
	Obituary "Amerigo was ripped to pieces."
	+FLOORCLIP
	+SEEFRIENDLYMONSTERS

	States
	{
	Spawn:
		TNT1 A 0 A_Jump(10, "Grumble")
		GRRG A 4 A_Look()
		Loop

	See:
		TNT1 A 0 A_SetSpeed(15)
		GRRG BBCCDDEE 2 A_Chase
		Loop

	Melee:
		TNT1 A 0 A_PlaySound("Grarg/Bite")
		GRRG FG 6 A_FaceTarget
		GRRG H 6 A_CustomMeleeAttack(random(3, 9) * 5, "imp/melee", "Melee", true)
		Goto See

	Missile:
		TNT1 A 0 A_PlaySound("Grarg/Bite")
		GRRG A 6 A_FaceTarget
		TNT1 A 0 ThrustThingZ(0, 40, 0, 0)
		TNT1 A 0 ThrustThing(angle * 256 / 360, 20, 0, 0)
	Jumpup:
		GRRG G 5
		GRRG H 2 A_CustomMeleeAttack(random(2, 4) * 5, "imp/melee", "Melee", true)
	JumpDown:
		GRRG H 2 A_CheckFloor("Land")
		GRRG H 2
		GRRG H 3 A_CustomMeleeAttack(random(2, 4) * 5, "imp/melee", "Melee", true)
		Loop

	Land:
		GRRG A 8 A_Stop
		Goto See

	Grumble:
		TNT1 A 0 A_PlaySound("Grarg/Idle",CHAN_AUTO,0.25)
		Goto Spawn

	Pain:
		GRGD A 2 A_Pain
		Goto See

	Death:
		TNT1 A 0 A_Scream
		TNT1 A 0 A_PlaySound("Grarg/Death")
		GRGD AB 4
		GRGD CD 8
		GRGD EFGH 4
		TNT1 A 0 A_NoBlocking

		GRGD I -1
		Stop
	}
}

actor GLG replaces ZombieMan
{
	Health 50
	Radius 16
	Height 48
	Speed 4
	PainChance 255
	Mass 100
	Scale 0.7
	Monster
	SeeSound "GLG/Attack"
	DeathSound "GLG/Death"
	ActiveSound "GLG/Idle"
	PainSound "GLG/Pain"
	Obituary "Amerigo was slashed to ribbons."
	+FLOORCLIP
	+SEEFRIENDLYMONSTERS
	+JUMPDOWN

	States
	{
	Spawn:
		TNT1 A 0 A_Jump(10, "Grumble")
		GGLG A 4 A_Look()
		Loop

	JumpDown:
		GGLG C 1 A_CheckFloor("Land")
		GGLG C 1
		GGLG C 1 A_CustomMeleeAttack(random(3, 5) * 5, "imp/melee", "Melee", true)
		Loop

	Land:
		GGLG FA 2 A_Stop
		Goto See

	See:
		TNT1 A 0 A_SetSpeed(15)
		GGLG AABBCCDD 2 A_Chase
		Loop

	Missile:
		GGLG EF 6 A_FaceTarget
		TNT1 A 0 A_SpawnProjectile("RockProjectile", 56)
		TNT1 A 0 A_PlaySound("GLG/Attack")
		GGLG G 6
		Goto See

	Melee:
		TNT1 A 0 A_PlaySound("GLG/Attack")
		GGLG EF 6 A_FaceTarget
		GGLG G 6 A_CustomMeleeAttack(random(2, 5) * 3, "imp/melee", "Melee", true)
		Goto See

	Grumble:
		TNT1 A 0 A_PlaySound("GLG/Idle",CHAN_AUTO,0.25)
		Goto Spawn

	Pain:
		GGLG H 2 A_Pain
		Goto See

	Death:
		TNT1 A 0 A_Scream
		TNT1 A 0 A_PlaySound("GLG/Death")
		GGLD A 7
		GGLD BCD 4
		TNT1 A 0 A_NoBlocking
		GGLD E -1
		Stop
	}
}

