actor Wyvern replaces Cacodemon
{

	Health 350
	Mass 100
	Speed 14
	Height 56
	Radius 32
	Painchance 200
	Monster
	Obituary "Amerigo met a wyvern."
	Seesound "Wyvern/pain"
	Deathsound "Wyvern/death"
	painsound "Wyvern/pain"
	+FLOORCLIP
	+NOBLOOD
	+FLOAT	
	+NOGRAVITY
	States
	{
	Spawn:
		WYVN ABC 5 A_Look
		TNT1 A 0 A_Playsound("Wyvern/flap",CHAN_AUTO)	
		WYVN DCB 5 A_Look
		Loop
	See:
		WYVN ABC 3 A_Chase	
		TNT1 A 0 A_Playsound("Wyvern/flap",CHAN_AUTO)
		WYVN DCB 3 A_Chase
		Loop
		
	Evade:	
		TNT1 A 0 A_Setspeed(20)
		WYVN ABC 2 A_Chase	
		TNT1 A 0 A_Playsound("Wyvern/flap",CHAN_AUTO)
		WYVN DCB 2 A_Chase
		goto see
	Missile:
		WYVN F 5 A_FaceTarget
		WYVN E 5 A_FaceTarget
		WYVN A 5 BRIGHT A_HeadAttack
		Goto See
	Pain:
		WYVN F 3
		WYVN F 3 A_Pain
		WYVN F 6
		TNT1 A 0 A_Jump(96,"Evade")
		Goto See
	Death:
		WYVD A 8 A_Playsound("Wyvern/scream",CHAN_AUTO)
		WYVD B 8 A_Scream
		WYVD C 8
		WYVD D 8
		WYVD D 8 A_NoBlocking
		WYVD D 4 A_JumpIf (z <= floorz, "Crash")
		Wait
	Crash:
		TNT1 A 0 A_Playsound("Wyvern/fall",CHAN_AUTO)	
		WYVD DE 5
		WYVD F -1
		Stop
	
	
	
	Raise:
		WYVD F 8 A_UnSetFloorClip
		WYVD EDCBA 8
		Goto See
	}

}

actor Shark replaces PainElemental
{
	Health 100
	Mass 100
	Speed 10
	Radius 30
	Height 30
	Monster
	Obituary "Amerigo was eaten by a shark."
	SeeSound "shark/sight"
	DeathSound "shark/death"
	ActiveSound "shark/active"
	+FLOORCLIP
	+NOGRAVITY
	+FLOAT

	States
	{
	Spawn:
		SHRK BC 10 A_Look
		Loop

	See:
		SHRK ABCDEFGH 4 A_GiveInventory("Chase_Water", 1)
		Loop

	Melee:
		SHRK E 10 A_FaceTarget
		SHRK F 8 A_CustomMeleeAttack (random(1, 5) * 5, "Chomp", "Swipe")
		SHRK G 10
		Goto See

	Death:
		SHRK A 0
		SHRK A 0 A_Scream
		SHRK AAAAAAAA 0 A_CustomMissile("Gibs1", random(20, 40), 0, random(0, 360), 2, random(-100, 100))
		Stop
	}
}

actor Chase_Water : CustomInventory
{
	Inventory.MaxAmount 0
	+INVENTORY.AUTOACTIVATE

	States
	{
	Spawn:
		TNT1 A 1
		Fail

	Use:
		TNT1 A 0 A_JumpIf(waterlevel < 3, "WaterLimit")
		TNT1 A 0 A_Chase
		Stop

	WaterLimit:
		TNT1 A 0 ThrustThingZ(0, 10, 1, 1)
		TNT1 A 0 A_Chase
		Stop

	}
}

